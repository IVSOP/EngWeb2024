extends layout

block content
	.w3-card-4
		header.w3-container.w3-teal
			h1= title
		.w3-container
			form.w3-container.w3-card-4(method="post" action="/compositores/edit")
				br
				p
					label.w3-text-grey Nome
					input.w3-input.w3-border(type="text" required name="nome" value=compositor.nome)
				p
					label.w3-text-grey Id
					input.w3-input.w3-border(type="text" readonly name="id" value=compositor.id)
				p
					label.w3-text-grey Bio
					textarea.w3-input.w3-border(rows="4" cols="50" required name="bio" value=compositor.bio)
				p
					label.w3-text-grey Data de nascimento
					br
					input.w3-border(type="date" required name="dataNasc" value=compositor.dataNasc)
				p
					label.w3-text-grey Data de obito
					br
					input.w3-border(type="date" required name="dataObito" value=compositor.dataObito)
				p
					label.w3-text-grey ID do periodo
					input.w3-input.w3-border(type="number" required name="periodo" value=compositor.periodo.id)
				p
					button.w3-btn.w3-padding.w3-teal(type="submit" style="width:120px") Send &nbsp; ‚ùØ

		footer.w3-container.w3-teal
